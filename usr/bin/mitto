#!/bin/sh

if [ "$#" -lt 2 ]; then
	echo "Usage: mitto <time> <body>"
	exit 1
fi

date -d "$1" > /dev/null 2>&1
if [ $? -ne 0 ]; then
	echo "Invalid time"
	exit 1
fi

DIR=/var/spool/mitto
ITEM_NAME=$(cat /proc/sys/kernel/random/uuid)
ITEM_TIME=$(date -d "$1" +%s)
ITEM_BODY=$2

printf "%s\n%s\n" $ITEM_TIME $ITEM_BODY > $DIR/$ITEM_NAME || echo "Failed"

